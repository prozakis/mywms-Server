<project name="de.linogistix.los.model.location.ejb" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project de.linogistix.los.model.location.ejb.</description>
    <import file="nbproject/build-impl.xml"/>
    
     <!-- Erweitert Netbeans common-init. Aktualisiert das zu Grunde liegende linogistix.los-ejb.jar -->
    <target name="common-init" depends="harness.common-init, sync.los-ejb">
        
    </target>
    
<!-- Sorgt dafür das die hier erstellten jars auch anderen Suiten zur Verfügung stehen-->
    <target name="sync.los-ejb">
        
        <echo message="Copy los.location-client.jar to release/modules/ext"/>
        <copy todir="release/modules/ext">
            <fileset dir="../../../server.app/los.location-ejb/build/lib">
                <include name="los.location-client.jar"/>
            </fileset>
        </copy>
    </target>
    
</project>
